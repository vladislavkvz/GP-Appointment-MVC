@model GPAppointment.ViewModels.AppointmentVMs.AppointmentIndexVM

@{
    ViewBag.Title = "Index";
}
<h1 style="text-align:center;font-size: 46px;margin: 27px;">Manage Appointment</h1>
<p>
    @Html.ActionLink("Create New", "Edit")
</p>

<table class="table">
    <tr>
        <th>@Html.Label("Id")</th>
        <th>@Html.Label("Start arrange time ")</th>
        <th>@Html.Label("End of arrange time")</th>
        <th>@Html.Label("Status")</th>
        <th>@Html.Label("Patient")</th>
        <th>@Html.Label("Doctor")</th>
        <th>@Html.Label("Seen")</th>
        <th></th>
    </tr>
    @foreach (var item in Model.Items)
            {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.ArrangeTime
            </td>
            <td>
                @item.ArrangeTime.AddHours(1)
            </td>
            <td>
                @item.Status
            </td>
            <td>
                @item.Patient.FirstName+@item.Patient.LastName
            </td>
            <td>
                @item.Doctor.FirstName+@item.Doctor.LastName
            </td>
            <td>
                @item.Seen
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<!--Appointment Pager-->
<div>
    @Html.Partial("_PagingPartial", Model.Pager)
</div>